<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class=" text-center">Entre ou cadastre-se</h1>
      <p class="text-center lead">Faça login ou cadastre-se</p>

      <%- include('includes/messages'); %>

      <div class="row">
        
        <div class="col-lg">
          <h4>Cadastre-se</h4>
          <p>Preencha todos os campos para criar sua conta</p>

          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Criar senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar conta</button>
          </form>

        </div>

        <div class="col-lg">
          <h4>Faça login</h4>
          <p>Se já possui conta, faça login abaixo:</p>

          <form action="/login/access" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>

        </div>
      
      </div>
      
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>